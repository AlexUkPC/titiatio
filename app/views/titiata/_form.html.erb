<%= simple_form_for(@titiatium) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :titiatium, label: "Titiatium about it",input_html:{class: "textarea"}, wrapper: false, label_html:{class: "label"}, placeholder: "Compose a new titiatium...", autofocus: true %>
    </div>
  </div>
    <%= f.button :submit, class:"button is-info" %>
<% end %>